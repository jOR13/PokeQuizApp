<div class="container mx-auto p-4" data-controller="timer">
  <h1 class="text-3xl font-bold mb-4">PokeQuiz</h1>
  <div data-timer-target="timer" class="text-red-500 text-xl font-bold mb-4"></div>
  <%= form_with url: quiz_path(@quiz, question_index: @question_index), method: :put, local: true do |form| %>
    <div class="mb-4">
      <p class="text-lg font-medium"><%= @question['question'] %></p>
      <% @question['options'].each do |option| %>
        <div class="flex items-center">
          <%= form.radio_button :answer, option, id: "option_#{option}" %>
          <%= form.label "option_#{option}", option, class: "ml-2" %>
        </div>
      <% end %>
    </div>
    <div>
      <%= form.submit 'Next', class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
    <%= form.hidden_field :question_index, value: @question_index %>
  <% end %>
</div>
