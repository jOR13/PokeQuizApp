<div class="container mx-auto p-4" data-controller="timer">
  <div class="bg-white shadow-md rounded-lg p-6">
    <div data-timer-target="timer" class="text-red-500 text-xl font-bold mb-4 text-center"></div>
    <%= form_with url: quiz_path(@quiz, question_index: @question_index), method: :put, local: true do |form| %>
      <div class="mb-4">
        <p class="text-2xl font-semibold text-gray-700 mb-2"><%= @question['question'] %></p>
        <% @question['options'].each do |option| %>
          <div class="flex items-center mb-2">
            <%= form.radio_button :answer, option, id: "option_#{option}", class: "form-radio h-5 w-5 text-indigo-600 transition duration-150 ease-in-out" %>
            <%= form.label "option_#{option}", option, class: "ml-2 text-lg text-gray-600" %>
          </div>
        <% end %>
      </div>
      <div class="flex justify-end">
        <%= form.submit 'Next', class: "bg-yellow-500 hover:bg-yellow-600 text-white font-bold py-2 px-4 rounded" %>
      </div>
      <%= form.hidden_field :question_index, value: @question_index %>
    <% end %>
  </div>
</div>
