<div class="container mx-auto p-4">
  <h1 class="text-3xl font-bold mb-4">Quiz Results</h1>
  <div class="mb-4">
    <% @quiz.content['questions'].each_with_index do |question, index| %>
      <div class="mb-4">
        <p class="text-lg font-medium"><%= question['question'] %></p>
        <p>Correct Answer: <%= question['answer'] %></p>
        <p>Your Answer: <%= question['player_answer'] %></p>
        <% if question['player_answer'] == question['answer'] %>
          <p class="text-green-500">Correct!</p>
        <% else %>
          <p class="text-red-500">Incorrect</p>
        <% end %>
      </div>
    <% end %>
  </div>
  <%= link_to 'Play Again', new_quiz_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
</div>
