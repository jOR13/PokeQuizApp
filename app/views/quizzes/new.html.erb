<div class="container mx-auto p-4">
  <h1 class="text-3xl font-bold mb-4">PokeQuiz</h1>
  <%= form_with model: @player, url: quizzes_path, local: true do |form| %>
    <div class="mb-4">
      <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :name, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
    </div>
    <div>
      <%= form.submit 'Start Quiz', class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  <% end %>
</div>
