<div id="top-players-list" class="mt-4 overflow-hidden max-w-md mx-auto">
  <% players.each do |player| %>
    <div class="flex flex-row items-center justify-center p-2 border-b border-gray-200 hover:bg-gray-200">
      <span class="text-md font-semibold text-gray-700 mr-2">Player name: <%= player.name %></span>
      <span class="text-pokemonYellow font-bold text-md">Score: <%= player.total_score %></span>
    </div>
  <% end %>
</div>
